<% 
def setWidth(n)
	return 'col-lg-'+(12/n).to_s
end
%>



<p id="notice" class="centrate"><%= notice %></p>
<% n = @videos.length %>
<% for i  in  0..n/3  %>
  <div class="row mt centered"> 
    <% for j in 1..[3, n - i*3].min 
       video = @videos[i*3+j-1] %>

        <div class="<%= setWidth [3, n - i*3].min  %>" >
          <a class="zoom green" href="<%= url_for video %> "><img class="" src="<%=video.image.url(:medium) %>" alt="" /></a>
          <p><%= video.title %></p>
        </div>
    
     <% end %>
  </div> 
<% end %>

<br>
<% if admin? %>
<%= link_to 'New Video', new_video_path %>
<% end %>
