      <div class="col-lg-6 col-lg-offset-3 centered">
<h2>Log in</h2>
<hr>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, 'placeholder':'Email', 'style':'width:100%;' %>
  </div>
<br>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", 'placeholder':'Password', 'style':'width:100%;' %>
  </div>
<br>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" , 'style':'width:100%;', 'class': 'btn btn-success'%>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
